
.video-item{
  border: 1px solid #ccc;
  margin: 20rpx 20rpx;
  padding: 15rpx 0 5rpx 15rpx ;
}
.video-top{
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.video-img-box{
  width: 375rpx;
  height: 210rpx;
  position: relative;
}
.video-info{
  width: 295rpx;
  height: 210rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  }
.video-img{
  width: 100%;
  height: 100%;
}
.video-identity{
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  background:red;
  text-align: center;
  z-index: 5;
}
.video-time{
  position: absolute;
  bottom:0;
  left:0;
  height: 56rpx;
  width: 100%;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(120, 133, 144, 0.7);
  z-index: 5;
}
.video-icon-container{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 3;
}
.video-icon{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 30rpx;
  margin: auto;
  width: 100rpx;
  height: 100rpx;

}
.video-text{
     overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 45rpx;
}
.video-price{
    color: #fb6a2b;
    font-weight: bold;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.video-num{
  font-size: 46rpx;
  vertical-align: middle;
}
.video-buy{
  font-size: 34rpx;
  font-weight: 400;
  border: 1px solid #fb6a2b;
    border-radius: 10rpx;
    width: 90rpx;
    height: 44rpx;
    line-height: 44rpx;
    color: #fb6a2b;
    margin-top: 10rpx;
    text-align: center;
}
.countdown{


    background-color: rgba(253, 181, 159, 0.102);
    width: 710rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
 margin: 0 0 0 -15rpx;

 

}
