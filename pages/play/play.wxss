@import "../BCLVideo/video.wxss";

.video-box {
  width: 100%;
  height: 420rpx;
}

.BCLVBox {
  height: 100%;
  width: 100%;
}

.info-box {
  font-size: 30rpx;
  color: #272727;
}

.info-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #f7f6f4;
  color: rgba(0, 0, 0, 0.6);
  text-shadow: 1px 1px 0px rgba(252, 253, 254, 0.02);
  font-size: 34rpx;
  border-bottom: 2px solid #e7e7e7;
}
scroll-view{
  padding: 10rpx 20rpx 90rpx;
  height: 690rpx;
}
.info-item{
    border-bottom: 1px solid #dcdcdc;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
}
.ask-box{
    width: 600rpx;
}
.ask-title{
 line-height: 40rpx;
 display: flex;
 justify-content: space-between;
}

.ask-headimg{
    border-radius: 50%;
    width: 88rpx;
    height: 88rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.ask-time{
color: rgba(0, 0, 0, 0.502);
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  padding:10rpx 15rpx 0;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #dcdcdc;
  border-bottom: 1px solid #dcdcdc;
  background-color: #f7f6f4;
  box-shadow: 0px 0px 5px 0px rgba(30, 31, 33, 0.25), inset 0px 2px 0px 0px rgba(255, 255, 255, 0.71);
}
.submit-btn{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  width: 110rpx;
  text-align: center;
  border-radius: 4rpx;
}
.input-question{
  width: 600rpx;
  height: 60rpx;
  background-color: #fff;
  color: rgba(0, 0, 0, 0.502);
  border: 1px solid #dcdcdc;
  padding: 0 15rpx;
}
.info-item:nth-last-child(1){
    border-bottom: 0;
   
}