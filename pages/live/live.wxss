/**index.wxss**/
@import "../BCLVideo/video.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size:12px;
}
.head-box{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.header{
  width: 100%;
  height: 420rpx;
  overflow: hidden;
}
.BCLVBox {
  width: 100%;
  height: 420rpx;
}
.audio-img{
  width: 100%;
  height: 420rpx;
  
}
.audio{
  width: 100%;
}
.toll{
  width: 100%;
  height: 92rpx;
  border-bottom: 12rpx solid #f2f2f2;
  padding: 14rpx 20rpx 0 ;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
}
.toll-btn{
  width: 120rpx;
  height: 54rpx;
  display: flex;
  flex-direction: row;
}
.tool-text{
 font-size: 28rpx;
 margin-top: 8rpx;
 color: #ffab33;
}
.toll-btn-hover{
  border: 1px solid #ffab33;
  border-radius: 10rpx;
}
.icon-tool{
  width: 50rpx;
  height: 50rpx;
  
}

.info-box {
  width: 100%;
  font-size: 30rpx;
  color: #666;
}

.info-title {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: rgba(0, 0, 0, 0.6);
  font-size: 30rpx;
}
.scroll-view{
  padding: 10rpx 20rpx 90rpx;
  margin-top: 520rpx;
  padding-bottom: 90rpx;
}
.info-item{
    border-bottom: 1px solid #dcdcdc;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
}
.ask-box{
    width: 600rpx;
}
.ask-title{
 line-height: 40rpx;
 display: flex;
 justify-content: space-between;
}

.ask-headimg{
    border-radius: 50%;
    width: 88rpx;
    height: 88rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.ask-time{
color: rgba(0, 0, 0, 0.502);
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  padding:10rpx 15rpx 0;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #dcdcdc;
  border-bottom: 1px solid #dcdcdc;
  background-color: #f7f6f4;
  box-shadow: 0px 0px 5px 0px rgba(30, 31, 33, 0.25), inset 0px 2px 0px 0px rgba(255, 255, 255, 0.71);
}
.submit-btn{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  width: 110rpx;
  text-align: center;
  border-radius: 4rpx;
}
.input-question{
  width: 600rpx;
  height: 60rpx;
  background-color: #fff;
  color: rgb(0, 0, 0);
  border: 1px solid #dcdcdc;
  padding: 0 15rpx;
}
.info-item:nth-last-child(1){
    border-bottom: 0;
   
}